<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ResemblesFragment">

    <TextView
        android:id="@+id/txt_current_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="1dp"
        tools:text="სავარჯიშო \u2014 ასო ა" />

    <TextView
        android:id="@+id/txt_exercise_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="1dp"
        tools:text="მონიშნეთ შესატყვისი წყვილები" />

    <TableLayout
        android:id="@+id/table_pairs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                style="@style/ResemblesButton"
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight=".5"
                android:focusableInTouchMode="true"
                android:text="Button" />

            <Button
                style="@style/ResemblesButton"
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_margin="16dp"
                android:text="Button" />
        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/btn_continue" />

</LinearLayout>