<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.ResultFragment">

    <ImageView
        android:id="@+id/img_smiley"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/smile_satisfactory" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="bottom|center_horizontal"
        android:padding="4dp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        android:maxLines="1"
        tools:text="კარგია" />

    <TextView
        android:id="@+id/txt_result_details"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        tools:text="4-დან 3 სწორია" />

    <Button
        android:id="@+id/btn_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="25dp"
        android:text="@string/btn_try_again" />

    <Button
        android:id="@+id/btn_next_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20dp"
        android:text="@string/btn_next_letter" />

</LinearLayout>