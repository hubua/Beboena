<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".LearnLetterFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="სწავლა "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvH1" android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>
        <TextView
                android:text="დაიმახსოვრეთ ასოს დამწერლობა"
                android:layout_width="343dp"
                android:layout_height="27dp"
                android:id="@+id/tvH2" android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/tvH1" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"/>
        <Button
                android:text="Button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                tools:layout_editor_absoluteX="105dp" android:id="@+id/button"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="200dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>