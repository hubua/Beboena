<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.TranscriptDestFragment">

    <TextView
        android:id="@+id/txt_current_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="სავარჯიშო - ასო 'ა'" />

    <TextView
        android:id="@+id/txt_translate_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_translate_sentence_hint" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/pb_transcript_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="3"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_transcript_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1 / 3" />

    </RelativeLayout>



    <TextView
        android:id="@+id/txt_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAppearance="@style/TextGeoBechduri"
        tools:text="@string/txt_sentence_sample_geo" />

    <EditText
        android:id="@+id/edt_transcription"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/edt_background_rounded"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textCursorDrawable="@null"
        tools:text="@string/txt_sentence_sample_khucuri" />

    <TextView
        android:id="@+id/txt_correct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCorrectBackground"
        android:padding="8dp"
        android:text="@string/txt_correct"
        android:textColor="@color/colorCorrectText"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_wrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrongBackground"
        android:padding="8dp"
        android:text="@string/txt_wrong"
        android:textColor="@color/colorWrongText"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background_rounded"
        android:text="@string/btn_check" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background_rounded"
        android:text="@string/btn_continue" />

</LinearLayout>