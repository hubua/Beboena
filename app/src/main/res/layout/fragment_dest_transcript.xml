<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.TranscriptDestFragment">

    <TextView
        android:id="@+id/txt_current_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="სავარჯიშო - ასო 'ა'" />

    <TextView
        android:id="@+id/txt_translate_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_translate_sentence_hint" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/pb_transcript_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="3"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_transcript_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </RelativeLayout>



    <TextView
        android:id="@+id/txt_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextGeoBechduri"
        tools:text="@string/txt_sentence_sample" />

    <EditText
        android:id="@+id/edt_transcription"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textCursorDrawable="@null"
        tools:text="ტექსტი" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background_rounded"
        android:text="@string/btn_check"
        android:textColor="@drawable/btn_textcolor_colored" />

</LinearLayout>