<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled -->
    <item android:state_enabled="false" >
        <shape android:shape="rectangle">
            <solid android:color="#E5E5E5"/>
            <stroke android:width="2dp" android:color="#9F3535" />
            <corners android:radius="16dp" />
        </shape>
   </item>

    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F0F9FE"/>
            <stroke android:width="3dp" android:color="#C0DFF2" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#F0F9FE"/>
            <stroke android:width="2dp" android:color="#C0DFF2" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#FEFEFE"/>
            <stroke android:width="2dp" android:color="#F0F0F0" />
            <corners android:radius="16dp" />
        </shape>
    </item>


</selector>