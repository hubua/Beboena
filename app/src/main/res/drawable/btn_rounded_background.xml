<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Disabled -->
    <item android:state_enabled="false" >
        <shape android:shape="rectangle">
            <solid android:color="#E5E5E5"/>
            <stroke android:width="2dp" android:color="#E0E0E0" />
            <corners android:radius="16dp" />
        </shape>
   </item>

    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#84DC00"/>
            <stroke android:width="2dp" android:color="#84DC00" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#78C800"/>
            <stroke android:width="2dp" android:color="#78C800" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Focused and not pressed -->
    <!-- <item android:state_focused="true" android:state_pressed="false" android:color="#ffffff" /> -->
    <!-- <item android:drawable="@android:color/holo_orange_light" /> -->
    <!-- <item android:drawable="@drawable/shape" /> -->
</selector>