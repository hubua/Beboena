<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:editTextBackground">@android:color/holo_orange_dark</item>

        <item name="android:buttonStyle">@style/RoundedButton</item>
    </style>

    <style name="TextH2" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextGeoBechduri" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sylfaen_bechduri_khutsuri</item>
    </style>

    <style name="TextGeoKhelnatseri" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sylfaen</item>
    </style>

    <style name="RoundedButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_background_rounded</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
